<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tarjeta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    android:backgroundTint="@color/gris"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:background="#00000000"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:id="@+id/nombreJugador"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="NombreJugador"
                android:layout_margin="2dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/apellidosJugador"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_margin="2dp"
                android:text="ApellidosJugador" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="right|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/seleccionado"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/entrenador_avatar"
                android:visibility="invisible"/>
            <TextView
                android:textColor="@color/naranja_chillon"
                android:id="@+id/dorsalJugador"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="#0"
                android:textSize="35dp"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>