<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/fondo_general">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="-10dp"
        android:gravity="left|center"
        android:elevation="10dp">
        <LinearLayout
            android:background="@drawable/crono_y_borde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="140dp"
            android:layout_marginRight="35dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/cronoPrimera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="50dp"
                    android:layout_marginRight="20dp"
                    android:textSize="40dp">
                    <TextView
                        android:textColor="@color/fondo_general"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/minutos"
                        android:layout_margin="2dp"
                        android:textSize="25dp"
                        android:text="00"/>
                    <TextView
                        android:textColor="@color/fondo_general"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:layout_margin="2dp"
                        android:text=":"/>
                    <TextView
                        android:textColor="@color/fondo_general"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/segundos"
                        android:layout_margin="2dp"
                        android:textSize="25dp"
                        android:text="00"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cronoSegunda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="50dp"
                    android:layout_marginRight="20dp"
                    android:textSize="40dp"
                    android:visibility="gone">
                    <TextView
                        android:textColor="@color/fondo_general"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/minutosSegunda"
                        android:layout_margin="2dp"
                        android:textSize="25dp"
                        android:text="00"/>
                    <TextView
                        android:textColor="@color/fondo_general"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:layout_margin="2dp"
                        android:text=":"/>
                    <TextView
                        android:textColor="@color/fondo_general"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/segundosSegunda"
                        android:layout_margin="2dp"
                        android:textSize="25dp"
                        android:text="00"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/marcador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50dp"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:text="0 - 0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="30dp">
                <TextView
                    android:id="@+id/extraTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXTRA: 3"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:textColor="#FFFFFF"
                    android:layout_margin="10dp"
                    android:visibility="invisible"></TextView>
                <LinearLayout
                    android:background="@drawable/fondo_crono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">
                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/minutosParar"
                        android:layout_margin="2dp"
                        android:textSize="75dp"
                        android:textStyle="bold"
                        android:text="00"/>
                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="75dp"
                        android:layout_margin="2dp"
                        android:textStyle="bold"
                        android:text=":"/>
                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/segundosParar"
                        android:layout_margin="2dp"
                        android:textSize="75dp"
                        android:textStyle="bold"
                        android:text="00"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">
                    <ImageButton
                        android:id="@+id/pausaCrono"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:src="@drawable/pause_ic"/>
                    <ImageButton
                        android:id="@+id/startCrono"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/naranja_suave"
                        android:src="@drawable/play_ic"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:elevation="10dp">
            <ImageButton
                android:padding="5dp"
                android:layout_margin="5dp"
                android:id="@+id/cambiarJugador"
                android:background="@drawable/roundcorner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cambio"
                android:backgroundTint="@color/gris"/>
            <ImageButton
                android:id="@+id/amarillaJugador"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:background="@drawable/roundcorner"
                android:layout_height="wrap_content"
                android:src="@drawable/amarilla"
                android:text="Amarilla"
                android:backgroundTint="@color/gris"/>
            <ImageButton
                android:id="@+id/rojaJugador"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner"
                android:text="Roja"
                android:src="@drawable/roja"
                android:backgroundTint="@color/gris"/>
            <ImageButton
                android:id="@+id/golJugador"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/roundcorner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GOL"
                android:src="@drawable/gol"
                android:backgroundTint="@color/gris"/>
    </LinearLayout>

    </LinearLayout>
</LinearLayout>