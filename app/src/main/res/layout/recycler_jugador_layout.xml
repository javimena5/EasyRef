<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tarjeta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:background="#00000000"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nombreJugador"
                android:textColor="@color/white"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="NombreJugador"
                android:layout_margin="2dp" />

            <TextView
                android:id="@+id/apellidosJugador"
                android:background="#00000000"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_margin="2dp"
                android:text="ApellidosJugador" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/fotoJugador"
            android:src="@drawable/jugador_local_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="10dp"></ImageView>
            <TextView
                android:id="@+id/dorsalJugador"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="#0"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>